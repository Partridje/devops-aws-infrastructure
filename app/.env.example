# Application Configuration
# Copy this file to .env and update with your values

#####################################
# Application Settings
#####################################
ENVIRONMENT=dev
APP_VERSION=1.0.0
APPLICATION_PORT=5001
DEBUG=False

#####################################
# Database Configuration
#####################################
# Local PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=appdb
DB_USER=postgres
DB_PASSWORD=postgres

# Or use AWS Secrets Manager (overrides above)
# DB_SECRET_ARN=arn:aws:secretsmanager:eu-north-1:123456789012:secret:myapp-db-credentials-xxx

# Connection Pool
DB_POOL_MIN_CONN=2
DB_POOL_MAX_CONN=10

#####################################
# AWS Configuration
#####################################
AWS_REGION=eu-north-1
# AWS_ACCESS_KEY_ID=your_access_key  # Not recommended, use IAM roles
# AWS_SECRET_ACCESS_KEY=your_secret  # Not recommended, use IAM roles

#####################################
# Instance Metadata (auto-populated on EC2)
#####################################
INSTANCE_ID=local-dev
INSTANCE_IP=127.0.0.1
AVAILABILITY_ZONE=local

#####################################
# Logging
#####################################
LOG_LEVEL=INFO
